@page "/ledcolor"
@layout LEDMainLayout
@rendermode InteractiveServer
@inherits LEDColorComponent

<PageTitle>Lights</PageTitle>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet" />

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">
                <i class="bi bi-lightbulb-fill"
                   style="color: @Color; background-color: @(@Color == "white" ? "black" : "")"></i>
            </h1>
            <p class="lead text-body-secondary">
                Light color changed by <strong class="fw-bold">@ChangedBy</strong>
            </p>
        </div>
    </div>
</section>